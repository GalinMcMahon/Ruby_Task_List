<h1>ToDo List</h1>
<p>Here are your tasks:</p>

<ul>
  <% @tasks.each() do |task| %> <!-- <%  %> creates a loop -->
    <li><%= task.description() %></li> <!-- = puts this keyword onto page -->
    <li><%= task.details() %></li> <!-- = puts this keyword onto page -->
  <% end %>
</ul>

<p>Create a new task:</p>

<form action="/tasks" method="post">
  <div class="form-group">
     <label for="description">Enter your reminder list item</label>
     <input id="description" name="description" class="form-control" type="text">
     <input id="details" name="details" class="form-control" type="text">
  </div>
  <button type="submit" class="btn-success">Submit</button>
</form>
